@page
@model MultipleAuthSchemes.Pages.Page2Model
@{
    ViewData["Title"] = "Page2";
}

<h2>User Identities</h2>
<p>User Identity: @User.Identity.Name</p>
<p>User AuthenticationType: @User.Identity.AuthenticationType</p>
<p>User IsAuthenticated: @User.Identity.IsAuthenticated</p>
@foreach (var identity in User.Identities)
{
    <div>Authentication Type: @identity.AuthenticationType</div>
    <table class="table">
        @foreach (var claim in identity.Claims)
        {
            <tr>
                <td>@claim.Type</td>
                <td>@claim.Value</td>
            </tr>
        }
    </table>
}

